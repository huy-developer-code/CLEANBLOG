<% include layout/header.ejs %>
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<!-- Page Header -->
<header
  class="masthead"
  style="background-image: url('/img/post-sample-image.jpg')"
>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading">
          <h1>Login</h1>
          <span class="subheading">Đăng nhập vào tài khoản</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <form action="/users/dangnhap" method="post">
        <div class="control-group">
          <div class="form-group">
            <label>Email</label>
            <input
              type="text"
              placeholder="Email"
              class="form-control"
              name="email"
            />
          </div>
        </div>

        <div class="control-group">
          <div class="form-group">
            <label>Password</label>
            <input
              type="password"
              placehoLder="password"
              class="form-control"
              name="password"
            />
          </div>
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>
  </div>
</div>

<hr />
